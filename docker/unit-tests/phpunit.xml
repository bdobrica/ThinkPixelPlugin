<?xml version="1.0"?>
<phpunit bootstrap="autoload.php" colors="true">
    <testsuites>
        <testsuite name="Plugin Tests">
            <directory suffix=".php">plugins/thinkpixel-search-rag/tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="WP_TESTS_DIR" value="/opt/tests" />
        <ini name="display_errors" value="true"/>
        <ini name="display_startup_errors" value="true"/>
        <ini name="error_reporting" value="-1"/>
    </php>
</phpunit>
